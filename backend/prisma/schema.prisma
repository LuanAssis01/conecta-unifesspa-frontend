generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}


enum ProjectStatus {
  SUBMITTED
  APPROVED
  REJECTED
  ACTIVE
  FINISHED
}

enum AudienceEnum {
  INTERNAL
  EXTERNAL
}

enum UserRole {
  ADMIN
  TEACHER
}

model Project {
  id                    String        @id @default(uuid())
  name                  String
  subtitle              String?
  overview              String?
  description           String?
  expected_results      String?
  start_date            DateTime
  duration              Int
  proposal_document_url String?
  img_url               String?
  registration_form_url String?
  numberVacancies       Int
  status                ProjectStatus
  audience              AudienceEnum

  /// RELACIONAMENTOS
  impactIndicators ImpactIndicator[]
  keywords         Keyword[] @relation("ProjectKeywords")
  course           Course?           @relation(fields: [courseId], references: [id])
  courseId         String?

  creator   User?   @relation(fields: [creatorId], references: [id])
  creatorId String?
}

model Course {
  id       String    @id @default(uuid())
  name     String
  projects Project[]
}

model User {
  id       String    @id @default(uuid())
  name     String
  email    String    @unique
  password String
  role     UserRole
  projects Project[]
}

model Keyword {
  id        String   @id @default(uuid())
  name      String   @unique
  project   Project[] @relation("ProjectKeywords")
}

model ImpactIndicator {
  id        String   @id @default(uuid())
  title     String
  value     Int
  project   Project? @relation(fields: [projectId], references: [id])
  projectId String?
}

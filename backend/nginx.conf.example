# Configuração Nginx para Conecta Unifesspa Backend
# Domínio: blipe.cloud
# Coloque este arquivo em /etc/nginx/sites-available/blipe-cloud
# E crie um link simbólico: ln -s /etc/nginx/sites-available/blipe-cloud /etc/nginx/sites-enabled/

upstream conecta_unifesspa_backend {
    server localhost:3333;
    keepalive 64;
}

# Redirecionar HTTP para HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name blipe.cloud www.blipe.cloud;

    # Certbot challenge
    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }

    # Redirecionar para HTTPS
    location / {
        return 301 https://$server_name$request_uri;
    }
}

# Configuração HTTPS
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name blipe.cloud www.blipe.cloud;

    # Certificados SSL (serão gerados pelo Certbot)
    ssl_certificate /etc/letsencrypt/live/blipe.cloud/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/blipe.cloud/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/blipe.cloud/chain.pem;

    # Configurações SSL modernas
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    ssl_stapling on;
    ssl_stapling_verify on;

    # Limite de tamanho de upload
    client_max_body_size 10M;

    # Logs
    access_log /var/log/nginx/blipe-cloud-access.log;
    error_log /var/log/nginx/blipe-cloud-error.log;

    # Compressão
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml text/javascript application/json application/javascript application/xml+rss application/x-javascript;

    # Headers de segurança
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;

    # CORS (se necessário, ajuste conforme suas necessidades)
    add_header Access-Control-Allow-Origin "*" always;
    add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, PATCH, OPTIONS" always;
    add_header Access-Control-Allow-Headers "Authorization, Content-Type, Accept" always;

    # API Backend
    location / {
        # Responder a preflight requests
        if ($request_method = 'OPTIONS') {
            add_header Access-Control-Allow-Origin "*" always;
            add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, PATCH, OPTIONS" always;
            add_header Access-Control-Allow-Headers "Authorization, Content-Type, Accept" always;
            add_header Access-Control-Max-Age 1728000;
            add_header Content-Type "text/plain; charset=utf-8";
            add_header Content-Length 0;
            return 204;
        }

        proxy_pass http://conecta_unifesspa_backend;
        proxy_http_version 1.1;
        
        # Headers
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # Cache
        proxy_cache_bypass $http_upgrade;
    }

    # Health check endpoint
    location /health {
        proxy_pass http://conecta_unifesspa_backend/health;
        access_log off;
    }

    # Arquivos estáticos de upload (se servidos pelo Nginx)
    # Descomente e ajuste o caminho se necessário
    # location /uploads {
    #     alias /caminho/para/o/projeto/api/uploads;
    #     expires 30d;
    #     add_header Cache-Control "public, immutable";
    # }
}

# INSTRUÇÕES DE INSTALAÇÃO:
#
# 1. Copie este arquivo para o servidor:
#    sudo nano /etc/nginx/sites-available/blipe-cloud
#
# 2. Crie o link simbólico:
#    sudo ln -s /etc/nginx/sites-available/blipe-cloud /etc/nginx/sites-enabled/
#
# 3. Teste a configuração:
#    sudo nginx -t
#
# 4. ANTES de recarregar o Nginx, obtenha o certificado SSL:
#    sudo certbot --nginx -d blipe.cloud -d www.blipe.cloud
#
# 5. Recarregue o Nginx:
#    sudo systemctl reload nginx
#
# 6. Configure renovação automática do SSL (já é automático com certbot)
#    sudo certbot renew --dry-run
